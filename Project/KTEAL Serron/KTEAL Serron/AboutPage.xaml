<Page x:Name="About_Page"
    x:Class="KTEAL_Serron.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KTEAL_Serron"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loading="About_Page_Loading">

    <Grid x:Name="About_Grid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image x:Name="About_Logo" Height="100" Margin="10,10,10,0" VerticalAlignment="Top" Source="Assets/Logo.png"/>
        <TextBlock x:Name="About_Version" Margin="10,115,0,0" Text="Έκδοση : 1.0.0.0" TextAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock x:Name="About_Dev" Margin="10,140,10,0" Text="Εκδότης : TechLimitTV.eu" TextAlignment="Center"  VerticalAlignment="Top"/>
        <TextBlock x:Name="About_Hackathon" Margin="10,165,10,0" TextWrapping="WrapWholeWords" Text="Η εφαρμογή αυτή έγινε στο 1ο Hackathon του ΤΕΙ Κεντρικής Μακεδονίας." TextAlignment="Center"  VerticalAlignment="Top"/>
        <TextBlock x:Name="About_Notice" Margin="10,0,10,233" TextWrapping="WrapWholeWords" Text="Το λογότυπο της εφαρμογής ανήκει στην εταιρία ΚΤΕΑΛ Σερρών Α.Ε. και σε καμία περίπτωση δεν το αξιώνουμε ως δικό μας." TextAlignment="Center" Height="148" VerticalAlignment="Bottom"/>
    </Grid>
</Page>
