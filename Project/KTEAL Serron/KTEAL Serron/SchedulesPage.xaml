<Page x:Name="Schedules_Page"
    x:Class="KTEAL_Serron.SchedulesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:KTEAL_Serron.Lines"
    xmlns:local="using:KTEAL_Serron"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loading="Schedules_Page_Loading">

    <Grid x:Name="Schedules_Grid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="Schedules_Msg" Margin="10,10,10,0" TextWrapping="Wrap" Text="Επιλέξτε γραμμή" VerticalAlignment="Top"/>
        <Grid Margin="0,35,0,0">
            <ListView x:Name="Schedules_Menu" Margin="10" SelectionChanged="Schedules_Menu_SelectionChanged"/>
            <controls:LineControl x:Name="lineControl" Visibility="Collapsed" />
        </Grid>

        

    </Grid>
</Page>
