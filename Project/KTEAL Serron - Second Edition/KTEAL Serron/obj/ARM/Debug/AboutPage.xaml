<Page x:ConnectionId='1' x:Name="About_Page"
    x:Class="KTEAL_Serron.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KTEAL_Serron"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                             >

    <Grid x:ConnectionId='2' x:Name="About_Grid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Image x:ConnectionId='3' x:Name="About_Logo" Height="100" Margin="10,10,10,0" VerticalAlignment="Top" Source="Assets/Logo.png"/>
        <TextBlock x:ConnectionId='4' x:Name="textBlock" Margin="10,115,10,0" TextWrapping="Wrap" Text="Έκδοση : 0.9.5.3-beta" VerticalAlignment="Top" TextAlignment="Center"/>
        <TextBlock x:ConnectionId='5' x:Name="textBlock_Copy" Margin="10,160,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="© 2012-2016 TechLimitTV.eu" TextAlignment="Center"/>
        <TextBlock x:ConnectionId='6' x:Name="textBlock_Copy1" Margin="10,140,10,0" TextWrapping="Wrap" Text="Η εφαρμογή είναι γραμμένη σε Visual C#" VerticalAlignment="Top" TextAlignment="Center"/>
        <TextBlock x:ConnectionId='7' x:Name="textBlock_Copy2" Margin="10,225,10,0" TextWrapping="Wrap" Text="Το λογότυπο ανήκει στην εταιρία ΚΤΕΑΛ Σερρών Α.Ε. και σε καμία περίπτωση δεν το αξιώνουμε ως δικό μας." VerticalAlignment="Top" TextAlignment="Center"/>
    </Grid>
</Page>

